FROM node:18-slim

# Create non-root user for security
RUN useradd -m -s /bin/bash mcp-user

# Create app directory and set permissions
WORKDIR /app

# Copy server.js file from templates
COPY templates/server.js .

# Install dependencies
RUN npm init -y && \
    npm install express cors body-parser axios jsonwebtoken

# Set server type environment variable
ENV SERVER_TYPE="fetch"

# Drop privileges to non-root user
USER mcp-user

EXPOSE 8000
CMD ["node", "server.js"]